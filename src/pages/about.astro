---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Content from '~/components/widgets/Content.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Features from '~/components/widgets/Features.astro';
import { createReader } from '@keystatic/core/reader';
import keystaticConfig from '../../keystatic.config';
import matesImage from '~/assets/images/image.png';
import objectivesImage from '~/assets/images/image1.png';
import aboutImage from '~/assets/images/image2.png';
import Image from '~/components/common/Image.astro';

export const prerender = true;

const reader = createReader(process.cwd(), keystaticConfig);

let aboutData;
try {
  aboutData = await reader.singletons.about.read();
} catch (e) {
  aboutData = {
    title: 'About CSI - Innowave',
    stats: [
      { number: '50+', label: 'Members' },
      { number: '50+', label: 'Collaborations' },
      { number: '14', label: 'Years of CSI' },
      { number: '1,000+', label: 'Participants' },
    ],
  };
}

const metadata = {
  title: 'About Us',
};
---

<Layout metadata={metadata}>
  <HeroText
    tagline="About Us"
    title="About CSI - Innowave"
    subtitle="The Computer Society of India chapter at Maharaja Agrasen Institute of Technology"
  />

  <Content
    id="about"
    columns={1}
    image={{
      src: aboutImage,
      alt: 'CSI Innowave Team',
      class: 'mx-auto w-full rounded-lg bg-gray-500 shadow-lg max-w-xs',
    }}
    items={[
      {
        description:
          'The Computer Society of India (CSI) at Maharaja Agrasen Institute of Technology is a prestigious student society focused on the intersection of technology and society. Established in 2009, it aims to explore advancements and social needs to build a better future. Join us to discover discussions and resolutions at the forefront of technology and its impact on society.',
      },
    ]}
  />

  <Stats
    title="Our Impact"
    stats={aboutData?.stats?.map((stat) => ({
      title: stat.label,
      amount: stat.number,
    })) || [
      { title: 'Members', amount: '50+' },
      { title: 'Collaborations', amount: '50+' },
      { title: 'Years of CSI', amount: '14' },
      { title: 'Participants', amount: '1,000+' },
    ]}
  />

  <Features
    id="vision-mission"
    title="Vision & Mission"
    columns={2}
    items={[
      {
        title: 'Our Vision',
        description:
          "CSI envisions a future where innovation, education, and sustainable practices converge to elevate India's trajectory towards progress. Nurturing young minds in a learning environment of high academic value and also fostering spiritual and ethical values along with technological and managerial competence.",
        icon: 'tabler:eye',
      },
      {
        title: 'Our Mission',
        description:
          'Our mission revolves around orchestrating a myriad of initiatives: from comprehensive workshops and insightful seminars to dynamic awareness campaigns. These endeavors are meticulously designed to champion skill development, foster entrepreneurial spirit, and champion environmental conservation.',
        icon: 'tabler:target',
      },
    ]}
  />

  <Steps2
    title="Objectives"
    subtitle="What drives CSI - Innowave"
    items={[
      {
        title: 'Student Engagement',
        description:
          "To cultivate students' interest in the field of management or commerce in a convivial environment, without the pressure of being graded.",
        icon: 'tabler:users',
      },
      {
        title: 'Sustainable Development',
        description:
          'Commitment to Sustainable Development: Central to our mission is the creation of an environment that not only promotes innovation but also ensures sustainable progress.',
        icon: 'tabler:plant',
      },
      {
        title: 'Skill Development',
        description:
          'Providing hands-on workshops, technical training, and real-world project experience to build industry-ready skills.',
        icon: 'tabler:certificate',
      },
      {
        title: 'Community Building',
        description:
          'Creating a collaborative ecosystem where students can network, learn from each other, and grow together.',
        icon: 'tabler:heart-handshake',
      },
    ]}
  >
    <div slot="callToAction" class="mt-24">
      <Image src={objectivesImage} alt="CSI Objectives" class="mx-auto w-full rounded-lg bg-gray-500 shadow-lg" />
    </div>
  </Steps2>

  <Content
    isReversed
    title="About MATES"
    image={{
      src: matesImage,
      alt: 'Maharaja Agrasen Technical Education Society',
      class: 'mx-auto w-full rounded-lg bg-gray-500 shadow-lg max-w-[12rem] mt-12',
    }}
    items={[
      {
        title: 'Maharaja Agrasen Technical Education Society',
        description:
          'Maharaja Agrasen Technical Education Society (MATES) is a charitable trust comprising a group of well-known Educationists, Industrialists, Businessmen, Professionals, and Philanthropists with an aim to promote quality education in the field of Technology, Management, Law, Pharmacy, and Health Services to shape the human society for a better future. With its constant growth and consistent efforts, MATES has been able to keep up its commitment to serving the society and its people.',
      },
    ]}
  />
</Layout>
